<section
  id="contenedor-form-index"
  class="contenedor sombra formulario-contacto fade-in"
>
  <h2>Contacto</h2>
  <form id="formulario">
    <fieldset>
      <legend>Contáctame</legend>

      <div class="contenedor-campos">
        <div class="campo">
          <label for="nombre">Nombre</label>
          <input
            class="input-text"
            type="text"
            id="nombre"
            name="nombre"
            placeholder="Tu Nombre"
          />
        </div>
        <div class="campo">
          <label for="telefono">Teléfono</label>
          <input
            class="input-text"
            type="tel"
            id="telefono"
            name="telefono"
            placeholder="Tu Teléfono"
          />
        </div>
        <div class="campo">
          <label for="correo">Correo</label>
          <input
            class="input-text"
            type="email"
            id="correo"
            name="correo"
            placeholder="Tu Email"
          />
        </div>
        <div class="campo">
          <label for="mensaje">Mensaje</label>
          <textarea
            class="input-text"
            id="mensaje"
            name="mensaje"
            placeholder="Expón cuál es tu proyecto, qué tipo de web y funcionalidad quieres que implementemos"
          ></textarea>
        </div>
      </div>
      <!-- .contenedor-campos -->

      <div class="alinear-derecha flex">
        <button class="boton w-sm-100" type="submit" disabled> Enviar</button>
      </div>
    </fieldset>
  </form>
</section>
